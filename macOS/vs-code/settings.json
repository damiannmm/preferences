{
    "[html]": { "editor.formatOnSave": false },
    "[json]": { "editor.formatOnSave": false },
    "[jsonc]": { "editor.formatOnSave": false },
    "[markdown]": {
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        }
    },
    "autoDocstring.docstringFormat": "numpy",
    "breadcrumbs.enabled": true,
    "color-highlight.markRuler": false,
    "diffEditor.renderSideBySide": true,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.bracketPairColorization.enabled": true,
    "editor.colorDecorators": false,
    "editor.fontFamily": "'FiraCode Nerd Font', 'Fira Code'",
    "editor.fontLigatures": true,
    "editor.formatOnSave": false,
    "editor.formatOnType": true,
    "editor.guides.bracketPairs": "active",
    "editor.minimap.enabled": false,
    "editor.minimap.showSlider": "always",
    "editor.minimap.size": "fit",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.rulers": [ 80, 100 ],
    "editor.scrollBeyondLastLine": false,
    "editor.showFoldingControls": "always",
    "editor.snippetSuggestions": "top",
    "editor.padding.bottom": 256,
    "editor.wrappingIndent": "deepIndent",
    "emmet.includeLanguages": { "javascript": "javascriptreact" },
    "explorer.confirmDelete": false,
    "files.associations": { "code-stdin-*.txt": "diff" },
    "files.insertFinalNewline": false,
    "files.trimTrailingWhitespace": false,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.gitkeep": true,  // additional
        "**/__pycache__": true,
        // "**/_site": true,
        "**/code-stdin**.txt": true,
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/env/***": true  // additional
    },
    "github.copilot.nextEditSuggestions.enabled": true,
    "indentRainbow.errorColor": "rgba(128,32,32,0.6)",
    "indentRainbow.excludedLanguages": [ "diff" ],
    "indentRainbow.colors": [
        "rgba(16,16,16,0.6)",
        "rgba(16,16,16,0.3)",
        "rgba(16,16,16,0.4)",
        "rgba(16,16,16,0.1)"
    ],
    "python.languageServer": "Pylance",
    // "python.linting.enabled": false,
    "python.defaultInterpreterPath": "/usr/local/bin/python3",
    "python.terminal.activateEnvironment": false,
    "search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/*.code-search": true,
        "**/env": true,  // additional
        "**/tags": true,
        "**/package.json": true,
        "**/package-lock.json": true,
        "**/yarn.lock": true
    },
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.defaultProfile.osx": "fish",
    "terminal.integrated.macOptionClickForcesSelection": true,
    // "terminal.integrated.shell.osx": "/usr/local/bin/fish",
    "terminal.integrated.profiles.osx": {
        "fish": { "path": "/usr/local/bin/fish" }
    },
    "terminal.integrated.showExitAlert": false,
    "terminal.integrated.tabs.enabled": false,
    "window.openFilesInNewWindow": "off",
    "workbench.colorTheme": "Default Dark+",
    "workbench.colorCustomizations": {
        "editorBracketHighlight.foreground1": "#fff",
        "editorBracketHighlight.foreground2": "#aaa",
        "editorBracketHighlight.foreground3": "#eee",
        "editorBracketHighlight.foreground4": "#bbb",
        "editorBracketHighlight.foreground5": "#ddd",
        "editorBracketHighlight.foreground6": "#ccc"
    },
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.settings.editor": "json",
    "zenMode.fullScreen": false,
    "zenMode.hideLineNumbers": false
}
