// Place your key bindings in this file to overwrite the defaults
[
    { "key": "ctrl+tab", "command": "workbench.action.nextEditor" },
    { "key": "ctrl+shift+tab", "command": "workbench.action.previousEditor" },
    { "key": "cmd+t", "command": "workbench.action.files.newUntitledFile" },
    { "key": "cmd+n", "command": "workbench.action.newWindow" },
    // { "key": "cmd+b", "command": "code-runner.run" },
    { "key": "cmd+k cmd+z", "command": "workbench.action.toggleZenMode" },
    { "key": "alt+up", "command": "cursorUp", "when": "editorTextFocus" },
    { "key": "alt+shift+up", "command": "cursorUpSelect", "when": "editorTextFocus" },
    { "key": "alt+down", "command": "cursorDown", "when": "editorTextFocus" },
    { "key": "alt+shift+down", "command": "cursorDownSelect", "when": "editorTextFocus" },
    { "key": "ctrl+cmd+g", "command": "editor.action.changeAll", "when": "editorTextFocus && !editorReadonly" },
    {
        "key": "shift+cmd+l",
        "command": "editor.action.insertCursorAtEndOfEachLineSelected",
        "when": "editorTextFocus"
    },
    { "key": "cmd+;", "command": "extension.toggleSemicolon", "when": "editorTextFocus" },
    { "key": "cmd+shift+;", "command": "extension.toggleColon", "when": "editorTextFocus" },
    { "key": "cmd+,", "command": "extension.toggleComma", "when": "editorTextFocus" },
    // { "key": "ctrl+c", "command": "code-runner.stop", "when": "editorTextFocus" },
    { "key": "cmd+0", "command": "workbench.action.zoomReset" },
    // { 
    //     "key": "cmd+k cmd+d",
    //     "command": "runInTerminal.run",
    //     "args": {
    //         "cmd": "$(which git) diff HEAD | col -b | subl -w &",
    //         "match": ".*"
    //     }
    // },
]