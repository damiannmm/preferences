// Place your key bindings in this file to overwrite the defaults
[
    { "key": "ctrl+tab", "command": "workbench.action.nextEditor" },
    { "key": "shift+ctrl+tab", "command": "workbench.action.previousEditor" },
    { "key": "cmd+t", "command": "workbench.action.files.newUntitledFile" },
    { "key": "cmd+n", "command": "workbench.action.newWindow" },
    { "key": "cmd+alt+p", "command": "workbench.action.showAllSymbols" },
    { "key": "cmd+k cmd+z", "command": "workbench.action.toggleZenMode" },
    { "key": "alt+up", "command": "cursorUp", "when": "editorTextFocus" },
    { "key": "shift+alt+up", "command": "cursorUpSelect", "when": "editorTextFocus" },
    { "key": "alt+down", "command": "cursorDown", "when": "editorTextFocus" },
    { "key": "shift+alt+down", "command": "cursorDownSelect", "when": "editorTextFocus" },
    { "key": "cmd+ctrl+g", "command": "editor.action.changeAll", "when": "editorTextFocus && !editorReadonly" },
    { "key": "shift+cmd+l", "command": "editor.action.insertCursorAtEndOfEachLineSelected", "when": "editorTextFocus" },
    { "key": "shift+cmd+g", "command": "workbench.action.tasks.runTask", "args": "git diff" },
    { "key": "cmd+;", "command": "extension.toggleSemicolon", "when": "editorTextFocus" },
    { "key": "shift+cmd+;", "command": "extension.toggleColon", "when": "editorTextFocus" },
    { "key": "cmd+,", "command": "extension.toggleComma", "when": "editorTextFocus" },
    { "key": "cmd+0", "command": "workbench.action.zoomReset" },
    { "key": "cmd+1", "command": "workbench.action.openEditorAtIndex1" },
    { "key": "cmd+2", "command": "workbench.action.openEditorAtIndex2" },
    { "key": "cmd+3", "command": "workbench.action.openEditorAtIndex3" },
    { "key": "cmd+4", "command": "workbench.action.openEditorAtIndex4" },
    { "key": "cmd+5", "command": "workbench.action.openEditorAtIndex5" },
    { "key": "cmd+6", "command": "workbench.action.openEditorAtIndex6" },
    { "key": "cmd+7", "command": "workbench.action.openEditorAtIndex7" },
    { "key": "cmd+8", "command": "workbench.action.openEditorAtIndex8" },
    { "key": "cmd+9", "command": "workbench.action.lastEditorInGroup" },
    { "key": "ctrl+1", "command": "workbench.action.focusFirstEditorGroup" },
    { "key": "ctrl+2", "command": "workbench.action.focusSecondEditorGroup" },
    { "key": "ctrl+3", "command": "workbench.action.focusThirdEditorGroup" },
    { "key": "cmd+alt+`", "command": "workbench.action.terminal.focusNext" },
    {
        "key": "cmd+j",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    {
        "key": "cmd+j",
        "command": "workbench.action.terminal.focus",
        "when": "!terminalFocus"
    },
    {
        "key": "shift+,",
        "command": "editor.action.insertSnippet",
        "args": { "snippet": "<${1:${TM_SELECTED_TEXT}}>" },
        "when": "editorHasSelection"
    }
]