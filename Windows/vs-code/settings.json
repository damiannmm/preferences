{
    "[html]": { "editor.formatOnSave": false },
    "[json]": { "editor.formatOnSave": false },
    "[jsonc]": { "editor.formatOnSave": false },
    "[markdown]": { "editor.quickSuggestions": true },
    "autoDocstring.docstringFormat": "numpy",
    "breadcrumbs.enabled": true,
    "color-highlight.markRuler": false,
    "diffEditor.renderSideBySide": true,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.bracketPairColorization.enabled": true,
    "editor.colorDecorators": false,
    "editor.fontFamily": "'FiraCode Nerd Font Retina', 'Fira Code Retina'",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.formatOnSave": false,
    "editor.formatOnType": true,
    "editor.guides.bracketPairs": "active",
    "editor.minimap.enabled": false,
    "editor.minimap.showSlider": "always",
    "editor.minimap.size": "fit",
    // "editor.multiCursorModifier": "ctrlCmd",
    "editor.rulers": [ 80, 100 ],
    "editor.scrollBeyondLastLine": false,
    "editor.showFoldingControls": "always",
    "editor.snippetSuggestions": "top",
    "editor.padding.bottom": 256,
    "editor.wrappingIndent": "deepIndent",
    "emmet.includeLanguages": { "javascript": "javascriptreact" },
    "explorer.confirmDelete": false,
    "files.associations": { "code-stdin-*.txt": "diff" },
    "files.insertFinalNewline": false,
    "files.trimTrailingWhitespace": false,
    "files.eol": "\n",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/_site": true,
        "**/code-stdin**.txt": true,
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/env/***": true  // additional
    },
    "indentRainbow.errorColor": "rgba(128,32,32,0.3)",
    "indentRainbow.excludedLanguages": [ "diff" ],
    "indentRainbow.colors": [
        "rgba(16,16,16,0.1)",
        "rgba(16,16,16,0.3)",
        "rgba(16,16,16,0.6)",
        "rgba(16,16,16,0.4)",
        "rgba(16,16,16,0.2)"
    ],
    "python.languageServer": "Jedi",
    "python.linting.enabled": false,
    "python.pythonPath": "/usr/bin/python3",
    "python.terminal.activateEnvironment": false,
    "python.workspaceSymbols.ctagsPath": "/usr/bin/ctags",
    "python.workspaceSymbols.exclusionPatterns": [
        "**/site-packages/**",
        "env/**"  // additional
    ],
    "python.workspaceSymbols.enabled": true,
    "search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/*.code-search": true,
        "**/env": true,  // additional
        "**/tags": true,
        "**/package.json": true,
        "**/package-lock.json": true,
        "**/yarn.lock": true
    },
    "terminal.integrated.fontSize": 13,
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.cursorBlinking": true,
    "vsicons.associations.folders": [
        { "icon": "config", "extensions": ["conf"] },
    ],
    "window.openFilesInNewWindow": "off",
    "workbench.colorCustomizations": {
        "editorBracketHighlight.foreground1": "#fff",
        "editorBracketHighlight.foreground2": "#aaa",
        "editorBracketHighlight.foreground3": "#eee",
        "editorBracketHighlight.foreground4": "#bbb",
        "editorBracketHighlight.foreground5": "#ddd",
        "editorBracketHighlight.foreground6": "#ccc",
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.settings.editor": "json",
    "zenMode.fullScreen": false,
    "zenMode.hideTabs": false,
    "zenMode.hideLineNumbers": false,
}
